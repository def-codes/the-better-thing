@import types

// MESO-GENERAL

// Identified
[id]:not([id=""])
  --prefix '#' attr(id)
  Tag()
  &::before
    font-size 200%
    background white

// Classified
[class]:not([class=""])
  --type '.' attr(class)

[draggable="true"]
  outline 1em dotted rgba(green, .6)
  // Rules like this are not worth much.  Really need to assert *content*
  // 
  // Draggable()

&:hover
  Indicated()
	
// ==================================== ELEMENTS: singletons

// Discourage elements with no semantics
div:not([class])
div[class=""]
  border 1em solid rgba(red, .5)
span
  border-width 0.2em
  border-style dashed
  border-color rgba(red, .5)

html
  background none

body
.Space
  Space()

main
  // --main-background white
  margin var(--main-margin)

// ================================ ELEMENTS: SPECIAL

p
  FlowContent()
  Paragraph()

// Links are the holiest thing.
a
  // Except phrasing when in para's, right?
  FlowContent()
  Navigable()

dfn
  FlowContent()
  PhrasingContent()
  PalpableContent()

ul
  FlowContent()
  UnorderedList()
  counter-reset array-item

ol
  FlowContent()
  OrderedList()

li
  FlowContent()
  Item()
  counter-increment array-item
  --prefix "Item " counter(array-item)
	// FF thing: https://developer.mozilla.org/en-US/docs/Web/CSS/::marker
  &::marker
    display none

dl
  FlowContent()
  Dictionary()

dt
  Term()
  --type "Term"

dd
  --type "Definition"
  DefinitionDetails()
  margin-inline-start 0					// beat browser default (Moz at least)

// How can you tell it's a label?
// label, .Label
//   background-color hsla(255 * var(--label-hue), 255 * var(--label-saturation), 255 * var(--label-luminosity), var(--label-alpha))

// STATEFUL : might be in collapsed state
details
  border 1em solid rgba(red, 0.1)

// AFFORDANCE
// STATEFUL : might be in collapsed state
summary
  Affordance()

aside
  SectioningContent()
  border 1em solid yellow
  float right
  // width 50%

nav
  SectioningContent()
  --type 'Nav'

// unit of portability
// unit of context
// unit of provenance
//
// It may be all those things, but does it afford moving?
// Does it afford etc?
article
  SectioningContent()
  display inline-block
  --article-margin 4em
  // border 2em solid rgba(black, 0.2)
  margin var(--article-margin)
  background rgba(black, 0.1)
  margin 1em

section
  SectioningContent()
  margin-top 1em

header
  FlowContent()
  --type 'Header'

footer
  FlowContent()
  --type 'Footer'

figure
  FlowContent()
  --type 'Figure'

h1, h2, h3
  HeadingContent()
  --type 'Heading'
	
// unit of provenance
// should have a citation nearby 
blockquote
  Lens() // not exactly, but out-of-context
  Quotation()
  margin-left 4em
  --alpha 0.6

// Wait wut?
script
  // This doesn't seem to take effect, though
  --type "script"
  display block
  white-space pre

style
  // Same as above
  --type "style"
  display block
  white-space pre

output
  Output()

address
  FlowContent()
  PalpableContent()
  // *should* be navigable

p
  PhrasingContext()

cite
  FlowContent()
  PhrasingContent()
  PalpableContent()
  Citation()
  // -- permitted: PhrasingContent()
	
code
  FlowContent()
  PhrasingContent()
  PalpableContent()
  Code()

// Treat `code` and `output` as block unless in phrasing context
p code, p output
  PhrasingContent()
  display default

code, output
  FlowContent()
  display block

i
  FlowContent()
  PhrasingContent()

s
  FlowContent()
  PhrasingContent()
  Stricken()
