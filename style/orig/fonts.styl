add(weight, variant, style = normal, name='FiraSansCondensed')
  @font-face
    font-family name
    font-style style
    font-weight weight
    // Assume CSS is in build/style
    src local(name + ' ' + variant), local(name + '-' + variant), url('../../fonts/' + name + '-' + variant + '.ttf') format('truetype')

add(100, 'Thin')
add(100, 'Thin', italic)
