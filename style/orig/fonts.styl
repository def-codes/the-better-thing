add(400, 'Regular')
add(400, 'Italic', italic)
add(500, 'Medium')
add(500, 'Medium', italic)
add(600, 'SemiBold')
add(600, 'SemiBoldItalic', italic)
add(700, 'Bold')
add(700, 'BoldItalic', italic)
