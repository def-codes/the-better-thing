@import types

*
  // If Thing is really the top class, just put rules here vs repeating a Thing
  // mixin for every element.
  --type 'Thing'
	
  transition 0.3s
  padding 1em
  border 1px solid rgba(black, 0.5)
  &::before
    opacity 0.5
	
  background-color s('hsla(var(--hue), var(--saturation), var(--luminosity), var(--alpha))')
  &::before
    content var(--prefix) '\00a0'
  
  --prefix var(--type)
  --space-background #222

  --hue 0deg
  --saturation 0%
  --luminosity 50%
  --alpha 20%

  --label-hue 0deg
  --label-saturation 100%
  --label-lumunosity 100%
  // --label-alpha 1
  --indicator-color #FAA
  
  --border-hue 0deg
  --border-saturation 100%
  --border-luminosity 100%
  --border-alpha 1
  --border-color s('hsla(var(--border-hue), var(--border-saturation), var(--border-luminosity), var(--border-alpha))')
